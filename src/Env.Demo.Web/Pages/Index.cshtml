@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Env.Demo.Localization
@using Volo.Abp.Users
@model Env.Demo.Web.Pages.IndexModel
@inject IHtmlLocalizer<DemoResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/Index.css" />
    </abp-style-bundle>
}
@section scripts {
    <abp-script-bundle>
        <abp-script src="/Pages/Index.js" />
    </abp-script-bundle>
}
<div class="jumbotron text-center">
    <h1>@L["Welcome"]</h1>

    <a href="~/EmailManager/Index" class="btn btn-primary px-4">@L["CreateNewCampaign"]</a>
</div>


<table class="table w-100">
    <tr>
        <th>
            @L["Campaign"]
        </th>

        <th>
            @L["Item"]

        </th>

        <th>
            @L["Completion"]
        </th>
    </tr>

    @if (Model != null && Model.campaigns != null)
    {

        foreach (var item in Model.campaigns)
        {


            <tr>
                <td>
                    @(item.Subject == null || item.Subject == "" ? " no subject" : item.Subject)
                </td>

                <td>
                    @item.ItemCount @("/") @item.SentItemCount
                </td>

                <td>
                    @item.PercentSent @("%")
                </td>

            </tr>
    
    }

    }


</table>
